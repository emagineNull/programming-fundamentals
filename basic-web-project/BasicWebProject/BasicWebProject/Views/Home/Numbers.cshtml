@{
    ViewData["Title"] = "Numbers";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Numbers 1..." + ViewBag.Numbers;
}

<h2>@ViewBag.Title</h2>

<ul>
    @for (int i = 1; i <= ViewBag.Numbers; i++)
    {
        <li>The number is @i .</li>
    }

    <form method="post">
        <input type="text" placeholder="New number" name="number" />
        <input type="submit" />
    </form>
</ul>

